@model IEnumerable<WorkingWithVisualS.Models.Product>
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Working with Visual Studio</title>


    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/first.css" rel="stylesheet" />
    <link href="~/Second.css" rel="stylesheet" />
</head>
<body class="p-1">
    <h3 class="text-center">Products </h3>
    <div class="alert alert-primary">
        this is allert
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr><th>Name</th><th>Price</th></tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@($"{p.Price:C2}")</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <a class="btn btn-primary" asp-action="AddProduct">
            Add new  Product
        </a>
    </div>


    <script src="~/third.js"></script>
    <script src="~/fourth.js"></script>
    <script src="~/lib/jQuery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/dist/popper.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
</body>
</html>